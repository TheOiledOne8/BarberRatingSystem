@{
    ViewData["Title"] = "Home Page";
}

<h1>Welcome to the Barber Rating System!</h1>

@if (Context.Session.GetInt32("UserId") != null)
{
    if (Context.Session.GetInt32("RoleId") == 1)
    {
        <p>You are logged in as a User.</p>
        <form asp-controller="Account" asp-action="BarberList" method="post">
    <button type="submit">Barbers List</button>
    </form>
    }
    else
    {
        <p>You are logged in as an Admin.</p>
        <form asp-controller="Admin" asp-action="Index" method="post">
    <button type="submit">Dashboard</button>
    </form>
    }
}
else
{
    <p>Please <a asp-controller="Account" asp-action="Login">Login</a> or <a asp-controller="Account" asp-action="Register">Register</a> first.</p>
}
